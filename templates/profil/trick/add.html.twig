{% extends 'base.html.twig' %}

{% block title %}ajout d'astuce
{% endblock %}


{% block importmap %}
	{{ importmap(['app', 'add-trick']) }}
{% endblock %}

{% block body %}

	<h1 class="mt-4">Cr√©ation d'un astuce</h1>

	{{ form_start(trickForm) }}


	<div class="form-group">
		{{ form_label(trickForm.title) }}
		{{ form_widget(trickForm.title) }}

		<div class="form-error">
			{{ form_errors(trickForm.title) }}
		</div>
	</div>


	<div class="form-group">
		{{ form_label(trickForm.content) }}
		{{ form_widget(trickForm.content) }}
		<div class="form-error">
			{{ form_errors(trickForm.content) }}
		</div>
	</div>


	<div class="form-group">
		{{ form_label(trickForm.featureimage) }}
		{{ form_widget(trickForm.featureimage) }}
		<div class="form-error">
			{{ form_errors(trickForm.featureimage) }}
		</div>

		<div class="preview">
			<img src="" alt="" width="300"/>
		</div>
	</div>


	<div class="form-group">

		{{ form_label(trickForm.categorie) }}
		{{ form_widget(trickForm.categorie) }}
		<div class="form-error">
			{{ form_errors(trickForm.categorie) }}
		</div>
	</div>


	<div class="form-group">
		{{ form_label(trickForm.keyword) }}
		{{ form_widget(trickForm.keyword) }}
		<div class="form-error">
			{{ form_errors(trickForm.keyword) }}

		</div>
	</div>

	{{ form_end(trickForm) }}


{% endblock %}
