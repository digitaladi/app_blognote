{% extends 'base.html.twig' %}

{% block title %}ajout d'astuce
{% endblock %}


{% block importmap %}
	{{ importmap(['app', 'add-trick']) }}
{% endblock %}

{% block body %}


	<div class="container">
		<h1 class="mt-4">Cr√©ation d'un astuce</h1>

		{{ form_start(trickFormAdmin) }}


		<div class="form-group">
			{{ form_label(trickFormAdmin.title) }}
			{{ form_widget(trickFormAdmin.title) }}

			<div class="form-error">
				{{ form_errors(trickFormAdmin.title) }}
			</div>
		</div>


		<div class="form-group">
			{{ form_label(trickFormAdmin.content) }}
			{{ form_widget(trickFormAdmin.content) }}
			<div class="form-error">
				{{ form_errors(trickFormAdmin.content) }}
			</div>
		</div>


		<div class="form-group">
			{{ form_label(trickFormAdmin.featureimage) }}
			{{ form_widget(trickFormAdmin.featureimage) }}
			<div class="form-error">
				{{ form_errors(trickFormAdmin.featureimage) }}
			</div>

			<div class="preview">
				<img src="" alt="" width="300"/>
			</div>
		</div>


		<div class="form-group">

			{{ form_label(trickFormAdmin.categorie) }}
			{{ form_widget(trickFormAdmin.categorie) }}
			<div class="form-error">
				{{ form_errors(trickFormAdmin.categorie) }}
			</div>
		</div>


		<div class="form-group">
			{{ form_label(trickFormAdmin.keyword) }}
			{{ form_widget(trickFormAdmin.keyword) }}
			<div class="form-error">
				{{ form_errors(trickFormAdmin.keyword) }}

			</div>
		</div>

		{{ form_end(trickFormAdmin) }}
	</div>


{% endblock %}
