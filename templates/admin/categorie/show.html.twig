{% extends 'base.html.twig' %}

{% block title %}blognote
{% endblock %}

{% block body %}

	<div class="container mt-4">
		<div class="list-group">
			<a href="#" class="list-group-item list-group-item-action active">
				<h4>
					{{ categorie.name }}</h4>
			</a>

			<li class="list-group-item d-flex justify-content-between align-items-center">
				Slug
				<span class="badge bg-primary rounded-pill">{{ categorie.slug }}</span>
			</li>
			<li class="list-group-item d-flex justify-content-between align-items-center">
				Parent
				<span class="badge bg-primary rounded-pill">{{ categorie.parent ?  categorie.parent : "pas de parent"}}</span>
			</li>


		</div>


		<ul class="list-group mt-2">
			<li class="list-group-item d-flex justify-content-between align-items-center">
				Nombres d'astuces
				<span class="badge bg-primary rounded-pill">{{ categorie.getTricks|length  }}</span>
			</li>
			<li class="list-group-item d-flex justify-content-between align-items-center">
				Nombre de categories
				<span class="badge bg-primary rounded-pill">{{ categorie.getCategories|length  }}</span>
			</li>

		</ul>
	</div>
{% endblock %}
