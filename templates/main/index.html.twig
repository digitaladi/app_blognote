	<ul class="nav nav-pills mb-3 mt-4" id="pills-tab" role="tablist">
		{% for categorie in categories %}
			<li class="nav-item  bg-primary" role="presentation">
				<button class="nav-link" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#{{categorie.name}}" type="button" role="tab" aria-controls="pills-home" aria-selected="true">{{ categorie.name }}</button>
			</li>


		</ul>
		<div class="tab-content" id="pills-tabContent">
			{% for trick in categorie.tricks %}
				<div class="tab-pane fade show active" id="{{categorie.name}}" role="tabpanel" aria-labelledby="pills-home-tab">{{ trick.title }}</div>

			</div>
		{% endfor %}
	{% endfor %}


